@using SFA.DAS.FAT.Web.Models.BreadCrumbs
@using SFA.DAS.FAT.Web.TagHelpers
@using SFA.DAS.FAT.Web.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
<div class="govuk-grid-row">

    <div class="govuk-grid-column-full">
        <div class="govuk-body">
            <p class="govuk-body">We're improving Find apprenticeship training. <a href="https://forms.office.com/e/3fdxa4HbkE" rel="noopener" class="govuk-link" target="_blank">What do you think of this service? (opens in a new tab)</a></p>
            <hr/>
        </div>
    </div>
    @if (Model is PageLinksViewModelBase pageLinks)
    {
        <div class="govuk-grid-column-three-quarters">
            <div asp-show="@Model.ShowBackLink" class="das-js-back-link">
                <div class="govuk-breadcrumbs">
                    <ol class="govuk-breadcrumbs__list">
                        <li class="govuk-breadcrumbs__list-item">
                            <a class="govuk-breadcrumbs__link govuk-back-link">Back</a>
                        </li>
                    </ol>
                </div>
            </div>
            <div asp-show="@Model.ShowHomeCrumb" class="govuk-breadcrumbs">
                <ol class="govuk-breadcrumbs__list">
                    <li class="govuk-breadcrumbs__list-item">
                        <a id="home-breadcrumb" class="govuk-breadcrumbs__link" asp-route="@RouteNames.ServiceStart">Home</a>
                    </li>
                    <li asp-show="pageLinks.ShowApprenticeTrainingCoursesCrumb" class="govuk-breadcrumbs__list-item">
                        <a id="courses-breadcrumb" class="govuk-breadcrumbs__link" asp-route="@RouteNames.Courses" asp-route-location="@pageLinks.Location">Apprenticeship training courses</a>
                    </li>

                    <li asp-show="pageLinks.ShowApprenticeTrainingCourseCrumb" class="govuk-breadcrumbs__list-item">
                        <a id="course-detail-breadcrumb" class="govuk-breadcrumbs__link" asp-route="@RouteNames.CourseDetails" asp-route-id="@pageLinks.CourseId" asp-route-location="@pageLinks.Location">@pageLinks.ApprenticeCourseTitle</a>
                    </li>

                    <li asp-show="pageLinks.ShowApprenticeTrainingCourseProvidersCrumb" class="govuk-breadcrumbs__list-item">
                        <a id="providers-breadcrumb" class="govuk-breadcrumbs__link" asp-route="@RouteNames.CourseProviders" asp-all-route-data="@Model.GetCourseProvidersRequest">Training providers</a>
                    </li>
                </ol>
            </div>
        </div>
        <div asp-show="@Model.ShowShortListLink" class="govuk-grid-column-one-quarter">
            <a id="header-view-shortlist" asp-route="@RouteNames.ShortList" class="govuk-body govuk-link govuk-link--no-visited-state app-view-shortlist-link">View shortlist <span class="app-view-shortlist-link__number" aria-hidden="true">@pageLinks.ShortListItemCount</span></a>
        </div>
    }
</div>