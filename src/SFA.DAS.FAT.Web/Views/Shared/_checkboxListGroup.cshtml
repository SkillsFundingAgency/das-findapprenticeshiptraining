@using SFA.DAS.FAT.Web.Models.Filters.FilterComponents
@model CheckboxListFilterSectionViewModel

<div class="govuk-form-group">
    <fieldset class="govuk-fieldset">
        <legend class="govuk-visually-hidden">@Model.Heading</legend>
        <div class="govuk-checkboxes govuk-checkboxes--small govuk-!-padding-bottom-3">
            <h3 for="@Model.Id" class="govuk-heading-s">
                @Model.Heading
            </h3>
            @if (!string.IsNullOrWhiteSpace(Model.SubHeading))
            {
                <p class="govuk-hint">@Model.SubHeading</p>
            }

            @await Html.PartialAsync("_checkboxItems", Model)
        </div>
    </fieldset>

    @await Html.PartialAsync("_filterExternalLink", Model)
</div>
