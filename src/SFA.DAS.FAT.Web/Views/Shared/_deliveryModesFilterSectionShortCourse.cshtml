@using System.Linq
@using SFA.DAS.FAT.Web.Models.Filters.FilterComponents
@using SFA.DAS.FAT.Domain.CourseProviders
@model CheckboxListFilterSectionViewModel
<div class="govuk-form-group">
    <fieldset class="govuk-fieldset">
        <legend class="govuk-visually-hidden">@Model.Heading</legend>
        <h2 class="govuk-label das-filter__search-label">
            @Model.Heading
        </h2>
        @if (!string.IsNullOrWhiteSpace(Model.SubHeading))
        {
            <p class="govuk-hint">@Model.SubHeading</p>
        }
        <div class="govuk-checkboxes govuk-checkboxes--small govuk-!-padding-bottom-0">
            @{
                var deliveryModesToShow = new[] 
                { 
                    (Mode: ProviderDeliveryMode.Online, Order: 0, Hint: "Your learner will complete this training remotely."),
                    (Mode: ProviderDeliveryMode.Workplace, Order: 1, Hint: "The training provider will travel to you to deliver this course."),
                    (Mode: ProviderDeliveryMode.Provider, Order: 2, Hint: "Your learner will travel to the training provider to complete this course.")
                };

                foreach (var deliveryMode in deliveryModesToShow)
                {
                    var filterItem = Model.Items.FirstOrDefault(i => i.Value == deliveryMode.Mode.ToString());
                    if (filterItem != null)
                    {
                        var inputId = $"filteritem-{Model.Id}-{deliveryMode.Mode}";

                        <div class="govuk-checkboxes__item">
                            <input @(filterItem.IsSelected ? "checked='checked'" : "")
                                   class="govuk-checkboxes__input"
                                   id="@inputId"
                                   name="@Model.For"
                                   type="checkbox"
                                   value="@((int)deliveryMode.Mode)" />

                            <label class="govuk-label govuk-checkboxes__label" for="@inputId">
                                @filterItem.DisplayText
                            </label>

                            <div id="@inputId-item-hint" class="govuk-hint govuk-checkboxes__hint">
                                @deliveryMode.Hint
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </fieldset>
    @if (Model.Link is not null)
    {
        <p class="govuk-body govuk-!-font-size-16 govuk-!-margin-top-3">
            <a class="govuk-link govuk-link--no-visited-state"
               href="@Model.Link.Url"
               target="_blank"
               rel="external">
                @Model.Link.DisplayText
            </a>
        </p>
    }
</div>
